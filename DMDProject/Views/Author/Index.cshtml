
@model IEnumerable<DMDProject.Models.AuthorEntity>

<h2>Authors</h2>
@using (Html.BeginForm("Search", "Author"))
{
    <table>
        <tr>
            <td>
                @Html.Label("Author Name:", new { @class = "control-label" })
            </td>
            <td>
                @Html.TextBox("Name", "", new { @class = "form-control" })
            </td>
        </tr>
        <tr>
            <td>
                @Html.Label("Research area:", new { @class = "control-label" })
            </td>
            <td>
                @Html.TextBox("Research_area", "", new { @class = "form-control" })
            </td>
        </tr>
        <tr>
            <td>
                @Html.Label("Institution:", new { @class = "control-label" })
            </td>
            <td>
                @Html.TextBox("Institution", "", new { @class = "form-control" })
            </td>
        </tr>
    </table>
    <input type="submit" value="Search" />
}
<p>
    @Html.ActionLink("Create New", "Create") &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    @Html.ActionLink("Show Rating", "Rate")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Author_id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Research_area)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Institution)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Author_id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Research_area)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Institution)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {  id=item.Author_id  }) |
                @Html.ActionLink("Details", "Details", new { id = item.Author_id }) |
                @Html.ActionLink("Delete", "Delete", new {  id=item.Author_id })
            </td>
        </tr>
    }
</table>

